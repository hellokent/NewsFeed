<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

    <LinearLayout
            android:id="@+id/account_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:orientation="vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/renren_username_label"
                android:layout_marginBottom="5dp"
                android:textSize="12sp"/>
        <EditText
                android:id="@+id/username_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Holo.EditText"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_below="@id/account_layout"
            android:layout_marginTop="50dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/renren_pwd_label"
                android:layout_marginBottom="5dp"
                android:textSize="12sp"/>
        <EditText
                android:id="@+id/pwd_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:password="true"
                style="@android:style/Widget.Holo.EditText"/>
        <Button
                android:id="@+id/submit_login_renren"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Holo.ActionButton.TextButton"
                android:layout_marginTop="30dip"
                android:layout_gravity="right"
                android:text="@string/submit"
                android:onClick="submitClicked"/>
    </LinearLayout>

</RelativeLayout>